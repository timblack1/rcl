    "http-proxy-middleware": "^0.17.0",
    "jshint": "^2.9.2",
    "jshint-stylish": "^2.1.0",
    "merge-stream": "^1.0.0",
    "require-dir": "^0.3.0",
    "run-sequence": "^1.1.4",
    "semantic-release": "^4.3.5",
    "vulcanize": ">=1.14.8",
    "web-component-tester": "^4.0.3"
